@model IEnumerable<TipoSaldoCuentum>

@{
    ViewData["Title"] = "Listado de Tipo Saldo";
}

<!-- Contenedor principal -->
<div class="custom-background p-4">

    <!-- Títulos -->
    <h1 class="mb-4 text-black">@ViewData["Title"]</h1>

    <a asp-action="Crear" class="btn btn-success mb-4">Crear nuevo</a>
    <a asp-action="ExportarCSV" class="btn btn-primary mb-4">Exportar a CSV</a>
    <!-- Tabla -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered bg-white">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" style="width: 150px;">Acciones</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Fecha Creación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tipoSaldo in Model)
                {
                    <tr>
                        <td class="text-center" style="white-space: nowrap;">
                            <a class="btn btn-sm btn-info" asp-action="Editar" asp-route-IdTipoSaldoCuenta="@tipoSaldo.IdTipoSaldoCuenta">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Borrar" asp-route-IdTipoSaldoCuenta="@tipoSaldo.IdTipoSaldoCuenta">
                                <i class="fas fa-edit"></i> Borrar
                            </a>
                        </td>
                        <td class="text-truncate" style="max-width: 200px;">@tipoSaldo.Nombre</td>
                        <td class="text-truncate" style="max-width: 200px;">
                            @tipoSaldo.FechaCreacion.ToString("dd/MM/yyyy")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .custom-background {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .bg-white {
        background-color: #ffffff;
    }

    .text-black {
        color: black;
    }

    .thead-dark {
        background-color: #ffffff;
        color: black;
    }

    .table th {
        text-align: center;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .table td {
        font-size: 0.875rem;
        padding: 0.5rem;
    }
</style>
