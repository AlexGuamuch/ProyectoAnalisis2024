@model Persona

@{
    ViewData["Title"] = "Borrar Persona";
}

<h1>Borrar Persona</h1>

<h3>¿Estás seguro de que deseas borrar a @Model.Nombre @Model.Apellido?</h3>

<div>
    <h4>Detalles de la Persona</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.IdPersona</dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
        <dt class="col-sm-2">Fecha de Nacimiento</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento.ToShortDateString()</dd>
        <dt class="col-sm-2">Género</dt>
        <dd class="col-sm-10">@Model.IdGenero</dd>
        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>
        <dt class="col-sm-2">Correo Electrónico</dt>
        <dd class="col-sm-10">@Model.CorreoElectronico</dd>
        <dt class="col-sm-2">Estado Civil</dt>
        <dd class="col-sm-10">@Model.IdEstadoCivil</dd>
    </dl>
</div>

<form asp-action="BorrarPersona" method="post">
    <input type="hidden" asp-for="IdPersona" />
    <div class="form-group">
        <input type="submit" value="Borrar" class="btn btn-danger" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
