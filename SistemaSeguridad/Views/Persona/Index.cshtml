@model IEnumerable<Persona>

@{
    ViewData["Title"] = "Lista de Personas";
}

<!-- Contenedor principal -->
<div class="custom-background p-4">

    <!-- Título -->
    <h1 class="mb-4 text-black">@ViewData["Title"]</h1>

    <!-- Botones -->
    <div class="mb-4">
        <a asp-action="Crear" class="btn btn-success">Crear Nueva Persona</a>
        <a asp-action="ExportarCSV" class="btn btn-primary">Exportar a CSV</a>
    </div>

    <!-- Tabla -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered bg-white">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Fecha de Nacimiento</th>
                    <th scope="col">Género</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Correo Electrónico</th>
                    <th scope="col">Estado Civil</th>
                    <th scope="col" style="width: 150px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var persona in Model)
                {
                    <tr>
                        <td>@persona.IdPersona</td>
                        <td>@persona.Nombre</td>
                        <td>@persona.Apellido</td>
                        <td>@persona.FechaNacimiento.ToShortDateString()</td>
                        <td>@persona.IdGenero</td>
                        <td>@persona.Direccion</td>
                        <td>@persona.Telefono</td>
                        <td>@persona.CorreoElectronico</td>
                        <td>@persona.IdEstadoCivil</td>
                        <td class="text-center" style="white-space: nowrap;">
                            <a asp-action="Editar" asp-route-idPersona="@persona.IdPersona" class="btn btn-info btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Borrar" asp-route-idPersona="@persona.IdPersona" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar esta persona?');">
                                <i class="fas fa-trash-alt"></i> Borrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .custom-background {
        background-color: #ffffff; /* Color de fondo blanco */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil */
    }

    .bg-white {
        background-color: #ffffff; /* Fondo blanco para la tabla */
    }

    .text-black {
        color: black; /* Texto negro para títulos */
    }

    .thead-dark {
        background-color: #ffffff; /* Fondo claro para el encabezado de la tabla */
        color: black; /* Texto negro para el encabezado de la tabla */
    }

    .btn-primary {
        background-color: #2980b9; /* Azul para el botón de exportar */
        border-color: #2980b9;
    }

        .btn-primary:hover {
            background-color: #3498db; /* Azul más claro al pasar el ratón */
            border-color: #3498db;
        }

    .btn-success {
        background-color: #27ae60; /* Verde para el botón de crear */
        border-color: #27ae60;
    }

        .btn-success:hover {
            background-color: #2ecc71; /* Verde más claro al pasar el ratón */
            border-color: #2ecc71;
        }

    .btn-info {
        background-color: #3498db; /* Azul para el botón de editar */
        border-color: #3498db;
    }

        .btn-info:hover {
            background-color: #5dade2; /* Azul más claro al pasar el ratón */
            border-color: #5dade2;
        }

    .btn-danger {
        background-color: #e74c3c; /* Rojo para el botón de borrar */
        border-color: #e74c3c;
    }

        .btn-danger:hover {
            background-color: #ec7063; /* Rojo más claro al pasar el ratón */
            border-color: #ec7063;
        }

    .table th {
        text-align: center; /* Alinear el texto de los encabezados al centro */
    }

    .table td {
        font-size: 0.875rem; /* Tamaño de fuente más pequeño */
        padding: 0.5rem; /* Relleno más pequeño */
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap; /* Evitar que el texto se ajuste */
    }
</style>
