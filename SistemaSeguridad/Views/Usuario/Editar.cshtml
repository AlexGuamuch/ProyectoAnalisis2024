@model UsuarioPrueba

@{
    ViewData["Title"] = "Editar Usuario";
}
<div class="custom-background p-4">
    <h2>Editar Usuario: @Model.Nombre</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Cambiar asp-action a "EditarUsuario" y method a "post" -->
    <form asp-action="EditarUsuario" method="post">
        <input type="hidden" asp-for="IdUsuario" />
        <div class="card">
            <div class="card-header">
                <h5>Datos generales</h5>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input type="text" asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Apellido" class="form-label"></label>
                    <input type="text" asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="FechaNacimiento" class="form-label"></label>
                    <input type="date" asp-for="FechaNacimiento" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="CorreoElectronico" class="form-label"></label>
                    <input type="email" asp-for="CorreoElectronico" class="form-control" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="TelefonoMovil" class="form-label"></label>
                    <input type="text" asp-for="TelefonoMovil" class="form-control" />
                    <span asp-validation-for="TelefonoMovil" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Password" class="form-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-dark">Enviar</button>
                <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </form>
</div>

<style>
    .custom-background {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .bg-white {
        background-color: #ffffff;
    }

    .text-black {
        color: black;
    }

    .thead-dark {
        background-color: #f8f9fa;
        color: black;
    }

    .btn-primary {
        background-color: #2980b9;
        border-color: #2980b9;
    }

    .btn-primary:hover {
        background-color: #3498db;
        border-color: #3498db;
    }

    .btn-success {
        background-color: #27ae60;
        border-color: #27ae60;
    }

    .btn-success:hover {
        background-color: #2ecc71;
        border-color: #2ecc71;
    }

    .btn-info {
        background-color: #3498db;
        border-color: #3498db;
    }

    .btn-info:hover {
        background-color: #5dade2;
        border-color: #5dade2;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }

    .btn-danger:hover {
        background-color: #ec7063;
        border-color: #ec7063;
    }

    .btn-secondary {
        background-color: #7f8c8d;
        border-color: #7f8c8d;
    }

    .btn-secondary:hover {
        background-color: #95a5a6;
        border-color: #95a5a6;
    }

    .btn-sm {
        font-size: 0.75rem;
        padding: 0.2rem 0.4rem;
        border-radius: 0.2rem;
    }

    .table th {
        text-align: center;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .table td {
        font-size: 0.875rem;
        padding: 0.5rem;
    }
</style>
