@model RegistroCreacionViewModel

@{
	ViewData["Title"] = "Registro";
}

<div class="custom-background p-4">
    <h1>Registro de usuario</h1>

    <form asp-action="Registro">
	    <div class="card">
		    <div class="card-header">
			    <h5>Datos de Usuarios</h5>
		    </div>
		    <div class="card-body">
			    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

			    <div class="mb-3">
				    <label asp-for="IdUsuario" class="form-label"></label>
				    <input asp-for="IdUsuario" class="form-control" />
				    <span asp-validation-for="IdUsuario" class="text-danger"></span>
			    </div>

			    <div class="mb-3">
				    <label asp-for="Nombre" class="form-label"></label>
				    <input asp-for="Nombre" class="form-control" />
				    <span asp-validation-for="Nombre" class="text-danger"></span>
			    </div>

			    <div class="mb-3">
				    <label asp-for="Apellido" class="form-label"></label>
				    <input asp-for="Apellido" class="form-control" />
				    <span asp-validation-for="Apellido" class="text-danger"></span>
			    </div>

			    <div class="mb-3">
				    <label asp-for="FechaNacimiento" class="form-label"></label>
				    <input asp-for="FechaNacimiento" class="form-control" />
				    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
			    </div>

			    <div class="mb-3">
				    <label asp-for="CorreoElectronico" class="form-label"></label>
				    <input asp-for="CorreoElectronico" class="form-control" />
				    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
			    </div>

			    <div class="mb-3">
				    <label asp-for="Password" class="form-label"></label>
				    <input asp-for="Password" class="form-control" />
				    <span asp-validation-for="Password" class="text-danger"></span>
			    </div>

			    <div class="mb-3">
				    <label asp-for="IdGenero" class="form-label"></label>
				    <select asp-for="IdGenero" asp-items="Model.Genero" class="form-select"></select>
				    <span asp-validation-for="IdGenero" class="text-danger"></span>
			    </div>

			    <div class="mb-3">
				    <label asp-for="TelefonoMovil" class="form-label"></label>
				    <input asp-for="TelefonoMovil" class="form-control" />
				    <span asp-validation-for="TelefonoMovil" class="text-danger"></span>
			    </div>

			    <div class="mb-3">
				    <label asp-for="IdSucursal" class="form-label"></label>
				    <select asp-for="IdSucursal" asp-items="Model.Sucursal" class="form-select"></select>
				    <span asp-validation-for="IdSucursal" class="text-danger"></span>
			    </div>

			    <button class="btn btn-primary">Registro</button>
                <a class="btn btn-secundary" asp-action="Index">Cancelar</a>
		    </div>
	    </div>
    </form>
</div>

<style>
    .custom-background {
        background-color: #ffffff; /* Color de fondo blanco */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil */
        padding: 20px; /* Espaciado interno */
    }

    .bg-white {
        background-color: #ffffff; /* Fondo blanco para la tabla */
    }

    .text-black {
        color: black; /* Texto negro para títulos */
    }

    .thead-dark {
        background-color: #f8f9fa; /* Fondo claro para el encabezado de la tabla */
        color: black; /* Texto negro para el encabezado de la tabla */
    }

    .btn-primary {
        background-color: #2980b9; /* Azul para el botón de exportar CSV */
        border-color: #2980b9;
    }

        .btn-primary:hover {
            background-color: #3498db; /* Azul más claro al pasar el ratón */
            border-color: #3498db;
        }

    .btn-success {
        background-color: #27ae60; /* Verde para el botón de crear */
        border-color: #27ae60;
    }

        .btn-success:hover {
            background-color: #2ecc71; /* Verde más claro al pasar el ratón */
            border-color: #2ecc71;
        }

    .btn-info {
        background-color: #3498db; /* Azul para el botón de editar */
        border-color: #3498db;
    }

        .btn-info:hover {
            background-color: #5dade2; /* Azul más claro al pasar el ratón */
            border-color: #5dade2;
        }

    .btn-danger {
        background-color: #e74c3c; /* Rojo para el botón de borrar */
        border-color: #e74c3c;
    }

        .btn-danger:hover {
            background-color: #ec7063; /* Rojo más claro al pasar el ratón */
            border-color: #ec7063;
        }

    .btn-secondary {
        background-color: #7f8c8d; /* Gris para el botón de exportar a PDF */
        border-color: #7f8c8d;
    }

        .btn-secondary:hover {
            background-color: #95a5a6; /* Gris más claro al pasar el ratón */
            border-color: #95a5a6;
        }

    .btn-sm {
        font-size: 0.75rem; /* Tamaño de fuente más pequeño */
        padding: 0.2rem 0.4rem; /* Relleno pequeño */
        border-radius: 0.2rem; /* Bordes redondeados pequeños */
    }

    .table th {
        text-align: center; /* Alinear el texto de los encabezados al centro */
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap; /* Evitar que el texto se ajuste */
    }

    .table td {
        font-size: 0.875rem; /* Tamaño de fuente más pequeño */
        padding: 0.5rem; /* Relleno más pequeño */
    }
</style>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
