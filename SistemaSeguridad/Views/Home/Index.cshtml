@{
    ViewBag.Title = "Inicio";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            /*background-color: #2c3e50;*/
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #f8f9fa;
            border-right: 1px solid #ddd;
            padding-top: 20px;
            overflow-y: auto;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .nav-link {
            color: #000;
        }

            .nav-link:hover {
                background-color: #f0f0f0;
            }

        .dropdown-menu {
            display: none;
        }

            .dropdown-menu.show {
                display: block;
            }

        /* Estilos personalizados */
        .dropdown-menu {
            background-color: #f8f9fa; /* Color de fondo claro */
        }

        .dropdown-item:hover {
            background-color: #e2e6ea; /* Color de fondo al pasar el ratón */
            color: #495057; /* Color del texto al pasar el ratón */
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Barra lateral -->
        <nav class="sidebar">
            <!-- Imagen del sistema -->
            <img src="~/Logotipo.png" alt="SistemaSeguridad" class="img-fluid mb-3" />

            <ul class="nav flex-column">
                <!-- Dropdown de Sistema de Seguridad -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownSistemaSeguridad" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sistema de Seguridad
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownSistemaSeguridad">
                        <div class="dropdown">
                            <a class="dropdown-item dropdown-toggle" href="#" id="navbarDropdownParametros" role="button">
                                Parámetros Generales
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Index", "Empresa")">Empresas</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Genero")">Géneros</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Sucursal")">Sucursales</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "StatusUsuario")">Status Usuario</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Role")">Roles</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "UsuarioRole")">Roles Usuario</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Opcion")">Opciones</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Menu")">Menú</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Modulo")">Módulos</a>
                            </div>
                        </div>

                        <div class="dropdown-divider"></div> <!-- Línea divisoria -->

                        <div class="dropdown">
                            <a class="dropdown-item dropdown-toggle" href="#" id="navbarDropdownAcciones" role="button">
                                Acciones
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Index", "Usuario")">Usuarios</a>
                            </div>
                        </div>
                    </div>
                </li>

                <!-- Dropdown de Sistema Cuenta Corriente -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownCuentaCorriente" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sistema Cuenta Corriente
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownCuentaCorriente">
                        <div class="dropdown">
                            <a class="dropdown-item dropdown-toggle" href="#" id="navbarDropdownParametrosCC" role="button">
                                Parámetros Cuenta Corriente
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("RegistrarMovimiento", "Cuenta")">Registrar Movimiento</a>
                                <a class="dropdown-item" href="@Url.Action("TodasLasCuentas", "Cuenta")">Listado de Clientes</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "MovimientoCuenta")">Historial de Movimientos</a>
                                <a class="dropdown-item" href="@Url.Action("Busqueda", "Persona")">Saldo Cuentas</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "TipoMovimientoCxc")">Tipo Movimiento</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Persona")">Personas</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "DocumentoPersona")">Documento Persona</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "EstadoCivil")">Estado Civil</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "TipoDocumento")">Tipo Documentos</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "TipoSaldoCuentum")">Tipo Saldos Cuentas</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "StatusCuentum")">Status Cuentas</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "FechaActiva")">Cierre</a>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Contenido principal -->
        <div class="content">
            <h1>Bienvenido al Sistema</h1>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').on('click', function (e) {
                e.stopPropagation();
                var $el = $(this).next('.dropdown-menu');

                if ($el.hasClass('show')) {
                    $el.removeClass('show');
                } else {
                    $(this).closest('.dropdown-menu').find('.dropdown-menu').removeClass('show');
                    $el.addClass('show');
                }
            });

            $(document).on('click', function () {
                $('.dropdown-menu').removeClass('show');
            });
        });
    </script>
</body>
</html>
