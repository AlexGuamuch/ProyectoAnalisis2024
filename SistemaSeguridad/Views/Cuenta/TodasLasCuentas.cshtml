@model IEnumerable<SaldoCuentum>

@{
    ViewData["Title"] = "Todas las Cuentas";
}

<!-- Contenedor principal -->
<div class="custom-background p-4">

    <!-- Título y botón Crear -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-black">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success">Crear</a>
    </div>

    <!-- Tabla -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered bg-white">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID Cuenta</th>
                    <th scope="col">ID Cliente</th>
                    <th scope="col">Saldo Anterior</th>
                    <th scope="col">Débitos</th>
                    <th scope="col">Créditos</th>
                    <th scope="col">Saldo Actual</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cuenta in Model)
                {
                    <tr>
                        <td>@cuenta.IdSaldoCuenta</td>
                        <td>@cuenta.IdPersona</td>
                        <td>@cuenta.SaldoAnterior</td>
                        <td>@cuenta.Debitos</td>
                        <td>@cuenta.Creditos</td>
                        <td>@(cuenta.SaldoAnterior + cuenta.Creditos - cuenta.Debitos)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .custom-background {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .bg-white {
        background-color: #ffffff;
    }

    .thead-dark {
        background-color: #ffffff;
        color: black;
    }

    .table th {
        text-align: center;
        font-weight: bold;
    }

    .table td {
        font-size: 0.875rem;
        padding: 0.5rem;
    }

    .table-responsive {
        margin-top: 1rem;
    }

    h1 {
        font-size: 1.75rem;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .text-black {
        color: black;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
</style>
