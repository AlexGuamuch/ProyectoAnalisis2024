@model IEnumerable<Empresa>

@{
    ViewData["Title"] = "Listado de Empresas";
}

<!-- Contenedor Principal -->
<div class="custom-background p-4">

    <!-- Títulos -->
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <!-- Botones -->
    <div class="mb-4">
        <a asp-action="Crear" class="btn btn-success">Crear nuevo</a>
        <a asp-action="ExportarCSV" class="btn btn-primary">Exportar a CSV</a>
       
        
    </div>

    <!-- Tabla -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered bg-white">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" style="width: 150px;">Acciones</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">NIT</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var empresa in Model)
                {
                    <tr>
                        <td class="text-center" style="white-space: nowrap;">
                            <a class="btn btn-sm btn-info" asp-action="Editar" asp-route-IdEmpresa="@empresa.IdEmpresa">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Borrar" asp-route-IdEmpresa="@empresa.IdEmpresa" onclick="return confirm('¿Estás seguro de que deseas eliminar esta empresa?');">
                                <i class="fas fa-trash-alt"></i> Borrar
                            </a>
                        </td>
                        <td class="text-truncate" style="max-width: 200px;">@empresa.Nombre</td>
                        <td class="text-truncate" style="max-width: 200px;">@empresa.Direccion</td>
                        <td class="text-truncate" style="max-width: 200px;">@empresa.Nit</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .custom-background {
        background-color: #ffffff; /* Color de fondo blanco */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil */
        padding: 20px; /* Espaciado interno */
    }

    .bg-white {
        background-color: #ffffff; /* Fondo blanco para la tabla */
    }

    .text-black {
        color: black; /* Texto negro para títulos */
    }

    .thead-dark {
        background-color: #f8f9fa; /* Fondo claro para el encabezado de la tabla */
        color: black; /* Texto negro para el encabezado de la tabla */
    }

    .btn-primary {
        background-color: #2980b9; /* Azul para el botón de exportar CSV */
        border-color: #2980b9;
    }

        .btn-primary:hover {
            background-color: #3498db; /* Azul más claro al pasar el ratón */
            border-color: #3498db;
        }

    .btn-success {
        background-color: #27ae60; /* Verde para el botón de crear */
        border-color: #27ae60;
    }

        .btn-success:hover {
            background-color: #2ecc71; /* Verde más claro al pasar el ratón */
            border-color: #2ecc71;
        }

    .btn-info {
        background-color: #3498db; /* Azul para el botón de editar */
        border-color: #3498db;
    }

        .btn-info:hover {
            background-color: #5dade2; /* Azul más claro al pasar el ratón */
            border-color: #5dade2;
        }

    .btn-danger {
        background-color: #e74c3c; /* Rojo para el botón de borrar */
        border-color: #e74c3c;
    }

        .btn-danger:hover {
            background-color: #ec7063; /* Rojo más claro al pasar el ratón */
            border-color: #ec7063;
        }

    .btn-secondary {
        background-color: #7f8c8d; /* Gris para el botón de exportar a PDF */
        border-color: #7f8c8d;
    }

        .btn-secondary:hover {
            background-color: #95a5a6; /* Gris más claro al pasar el ratón */
            border-color: #95a5a6;
        }

    .btn-sm {
        font-size: 0.75rem; /* Tamaño de fuente más pequeño */
        padding: 0.2rem 0.4rem; /* Relleno pequeño */
        border-radius: 0.2rem; /* Bordes redondeados pequeños */
    }

    .table th {
        text-align: center; /* Alinear el texto de los encabezados al centro */
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap; /* Evitar que el texto se ajuste */
    }

    .table td {
        font-size: 0.875rem; /* Tamaño de fuente más pequeño */
        padding: 0.5rem; /* Relleno más pequeño */
    }
</style>

