@model IEnumerable<SistemaSeguridad.Models.MovimientoCuentum>

@{
    ViewData["Title"] = "Lista de Movimientos";
}

<!-- Contenedor principal -->
<div class="custom-background p-4">

    <!-- Títulos -->
    <h1 class="mb-4 text-black">@ViewData["Title"]</h1>

    <!-- Botón para crear un nuevo movimiento -->
    <!--  <div class="mb-4">
        <a asp-action="Crear" class="btn btn-success">Registrar Nuevo Movimiento</a>
    </div> -->

    <!-- Tabla -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered bg-white">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Id Saldo Cuenta</th>
                    <th scope="col">Tipo Movimiento</th>
                    <th scope="col">Fecha Movimiento</th>
                    <th scope="col">Valor Movimiento</th>
                    <th scope="col">Valor Movimiento Pagado</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Fecha Creación</th>
                    <th scope="col">Usuario Creación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movimiento in Model)
                {
                    <tr>
                        <td>@movimiento.IdMovimientoCuenta</td>
                        <td>@movimiento.IdSaldoCuenta</td>
                        <td>@movimiento.IdTipoMovimientoCxc</td>
                        <td>@movimiento.FechaMovimiento.ToString("dd/MM/yyyy")</td>
                        <td>@movimiento.ValorMovimiento</td>
                        <td>@movimiento.ValorMovimientoPagado</td>
                        <td>@movimiento.Descripcion</td>
                        <td>@movimiento.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>@movimiento.UsuarioCreacion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .custom-background {
        background-color: #ffffff; /* Color de fondo blanco */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil */
    }

    .bg-white {
        background-color: #ffffff; /* Fondo blanco para la tabla */
    }

    .text-black {
        color: black; /* Texto negro para títulos */
    }

    .thead-dark {
        background-color: #ffffff; /* Fondo claro para el encabezado de la tabla */
        color: black; /* Texto negro para el encabezado de la tabla */
    }

    .table th {
        text-align: center; /* Alinear el texto de los encabezados al centro */
    }

    .table td {
        font-size: 0.875rem; /* Tamaño de fuente más pequeño */
        padding: 0.5rem; /* Relleno más pequeño */
    }

    .btn-success {
        background-color: #28a745; /* Verde para el botón de registrar */
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #34d058; /* Verde más claro al pasar el ratón */
            border-color: #34d058;
        }
</style>
