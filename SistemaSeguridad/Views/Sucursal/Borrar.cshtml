@model Sucursal

@{
	ViewData["Title"] = "Borrar Sucursal";
}

<div class="custom-background p-4">
    <h2>Eliminar</h2>
    <h4>Esta seguro de borrar este registro</h4>
    <hr />
    <div class="row">
        <label class="col-sm-2 col-form-label col-form-label-lg">Nombre :</label>
        <div class="col-sm-10">
            <label class="col-sm-2 col-form-label col-form-label-lg">@Model.Nombre</label>
        </div>
    </div>
    <div class="row">
        <label class="col-sm-2 col-form-label col-form-label-lg">Direccion :</label>
        <div class="col-sm-10">
            <label class="col-sm-2 col-form-label col-form-label-lg">@Model.Direccion</label>
        </div>
    </div>
    <form asp-action="BorrarSucursal">
        <input type="hidden" asp-for="IdSucursal" />
        <button type="submit" class="btn btn-danger">Borrar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>

<style>
    .custom-background {
        background-color: #ffffff; /* Color de fondo blanco */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil */
        padding: 20px; /* Espaciado interno */
    }

    .bg-white {
        background-color: #ffffff; /* Fondo blanco para la tabla */
    }

    .text-black {
        color: black; /* Texto negro para títulos */
    }

    .thead-dark {
        background-color: #f8f9fa; /* Fondo claro para el encabezado de la tabla */
        color: black; /* Texto negro para el encabezado de la tabla */
    }

    .btn-primary {
        background-color: #2980b9; /* Azul para el botón de exportar CSV */
        border-color: #2980b9;
    }

        .btn-primary:hover {
            background-color: #3498db; /* Azul más claro al pasar el ratón */
            border-color: #3498db;
        }

    .btn-success {
        background-color: #27ae60; /* Verde para el botón de crear */
        border-color: #27ae60;
    }

        .btn-success:hover {
            background-color: #2ecc71; /* Verde más claro al pasar el ratón */
            border-color: #2ecc71;
        }

    .btn-info {
        background-color: #3498db; /* Azul para el botón de editar */
        border-color: #3498db;
    }

        .btn-info:hover {
            background-color: #5dade2; /* Azul más claro al pasar el ratón */
            border-color: #5dade2;
        }

    .btn-danger {
        background-color: #e74c3c; /* Rojo para el botón de borrar */
        border-color: #e74c3c;
    }

        .btn-danger:hover {
            background-color: #ec7063; /* Rojo más claro al pasar el ratón */
            border-color: #ec7063;
        }

    .btn-secondary {
        background-color: #7f8c8d; /* Gris para el botón de exportar a PDF */
        border-color: #7f8c8d;
    }

        .btn-secondary:hover {
            background-color: #95a5a6; /* Gris más claro al pasar el ratón */
            border-color: #95a5a6;
        }

    .btn-sm {
