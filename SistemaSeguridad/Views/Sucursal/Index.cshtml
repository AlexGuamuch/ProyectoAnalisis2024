@model IEnumerable<Sucursal>

@{
    ViewData["Title"] = "Listado de Sucursales";
}

<!-- Contenedor principal -->
<div class="custom-background p-4">

    <h1 class="mb-4 text-black">@ViewData["Title"]</h1>

    <!-- Botones de acción -->
    <a asp-action="Crear" class="btn btn-success mb-4">Crear nuevo</a>
    <a asp-action="ExportarCSV" class="btn btn-primary mb-4">Exportar a CSV</a>

    <!-- Tabla de sucursales -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered bg-white">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" style="width: 130px;">Acciones</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Dirección</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sucursal in Model)
                {
                    <tr>
                        <td class="text-center">
                            <a class="btn btn-sm btn-info" asp-action="Editar" asp-route-IdSucursal="@sucursal.IdSucursal">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Borrar" asp-route-IdSucursal="@sucursal.IdSucursal" onclick="return confirm('¿Estás seguro de que deseas eliminar esta sucursal?');">
                                <i class="fas fa-trash-alt"></i> Borrar
                            </a>
                        </td>
                        <td>@sucursal.Nombre</td>
                        <td>@sucursal.Direccion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .custom-background {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .bg-white {
        background-color: #ffffff;
    }

    .text-white {
        color: #ffffff;
    }

    .btn-primary {
        background-color: #2980b9;
        border-color: #2980b9;
    }

        .btn-primary:hover {
            background-color: #3498db;
            border-color: #3498db;
        }

    .btn-success {
        background-color: #27ae60;
        border-color: #27ae60;
    }

        .btn-success:hover {
            background-color: #2ecc71;
            border-color: #2ecc71;
        }

    .btn-info {
        background-color: #3498db;
        border-color: #3498db;
    }

        .btn-info:hover {
            background-color: #5dade2;
            border-color: #5dade2;
        }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }

        .btn-danger:hover {
            background-color: #ec7063;
            border-color: #ec7063;
        }

    .btn-sm {
        font-size: 0.75rem;
        padding: 0.2rem 0.4rem;
        border-radius: 0.2rem;
    }

    .table th {
        text-align: center;
    }

    .table td {
        font-size: 0.875rem;
        padding: 0.5rem;
    }
</style>
