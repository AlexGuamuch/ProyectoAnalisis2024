@model DocumentoPersona

@{
    ViewData["Title"] = "Editar Documento de Persona";
}

<div class="custom-background p-4">
    <h1>Editar documento: @Model.NoDocumento</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Editar">
        <input type="hidden" asp-for="IdTipoDocumento" />

        <div class="mb-2">
            <label asp-for="IdTipoDocumento" class="form-label"></label>
            <select asp-for="IdTipoDocumento" class="form-control" asp-items="@(new SelectList(ViewBag.TiposDocumento, "Id", "Nombre"))">
                <option value="">Seleccione tipo de documento</option>
            </select>
            <span asp-validation-for="IdTipoDocumento" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="NoDocumento" class="form-label"></label>
            <input type="text" asp-for="NoDocumento" class="form-control" />
            <span asp-validation-for="NoDocumento" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="UsuarioCreacion" class="form-label"></label>
            <input type="text" asp-for="UsuarioCreacion" class="form-control" readonly />
            <span asp-validation-for="UsuarioCreacion" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="FechaModificacion" class="form-label"></label>
            <input type="text" asp-for="FechaModificacion" class="form-control" readonly />
            <span asp-validation-for="FechaModificacion" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>

<style>
    .custom-background {
        background-color: #ffffff; /* Color de fondo blanco */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil */
        padding: 20px; /* Espaciado interno */
    }

    .bg-white {
        background-color: #ffffff; /* Fondo blanco para la tabla */
    }

    .text-black {
        color: black; /* Texto negro para títulos */
    }

    .btn-primary {
        background-color: #2980b9; /* Azul para el botón de exportar CSV */
        border-color: #2980b9;
    }

    .btn-primary:hover {
        background-color: #3498db; /* Azul más claro al pasar el ratón */
        border-color: #3498db;
    }

    .btn-success {
        background-color: #27ae60; /* Verde para el botón de crear */
        border-color: #27ae60;
    }

    .btn-success:hover {
        background-color: #2ecc71; /* Verde más claro al pasar el ratón */
        border-color: #2ecc71;
    }

    .btn-info {
        background-color: #3498db; /* Azul para el botón de editar */
        border-color: #3498db;
    }

    .btn-info:hover {
        background-color: #5dade2; /* Azul más claro al pasar el ratón */
        border-color: #5dade2;
    }

    .btn-danger {
        background-color: #e74c3c; /* Rojo para el botón de borrar */
        border-color: #e74c3c;
    }

    .btn-danger:hover {
        background-color: #ec7063; /* Rojo más claro al pasar el ratón */
        border-color: #ec7063;
    }

    .btn-secondary {
        background-color: #7f8c8d; /* Gris para el botón de cancelar */
        border-color: #7f8c8d;
    }

    .btn-secondary:hover {
        background-color: #95a5a6; /* Gris más claro al pasar el ratón */
        border-color: #95a5a6;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap; /* Evitar que el texto se ajuste */
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
