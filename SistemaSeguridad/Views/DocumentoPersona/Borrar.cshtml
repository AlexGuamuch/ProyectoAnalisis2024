@model DocumentoPersona

@{
    ViewData["Title"] = "Borrar Documento";
}

<div class="custom-background p-4">
    <h2>Eliminar</h2>
    <h4>¿Está seguro de borrar este registro?</h4>
    <hr />
    <div class="row">
        <label class="col-sm-2 col-form-label col-form-label-lg">Tipo de Documento:</label>
        <div class="col-sm-10">
            <label class="col-form-label col-form-label-lg">@Model.IdTipoDocumento</label>
        </div>
    </div>
    <div class="row">
        <label class="col-sm-2 col-form-label col-form-label-lg">Persona:</label>
        <div class="col-sm-10">
            <label class="col-form-label col-form-label-lg">@Model.IdPersona</label>
        </div>
    </div>
    <div class="row">
        <label class="col-sm-2 col-form-label col-form-label-lg">Número de Documento:</label>
        <div class="col-sm-10">
            <label class="col-form-label col-form-label-lg">@Model.NoDocumento</label>
        </div>
    </div>
    <form asp-action="BorrarDocumento" method="post">
        <input type="hidden" asp-for="IdTipoDocumento" />
        <input type="hidden" asp-for="IdPersona" />
        <button type="submit" class="btn btn-danger">Borrar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>

<style>
    .custom-background {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }

    .btn-danger:hover {
        background-color: #ec7063;
        border-color: #ec7063;
    }

    .btn-secondary {
        background-color: #7f8c8d;
        border-color: #7f8c8d;
    }

    .btn-secondary:hover {
        background-color: #95a5a6;
        border-color: #95a5a6;
    }
</style>
