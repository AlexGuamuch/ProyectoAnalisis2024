@model UsuarioRole

@{
	ViewData["Title"] = "Asignar Role";
}

<h1>Asignar Role</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Crear">
    <div class="card">
        <div class="card-header">
            <h5>Datos generales</h5>
        </div>
        <div class="card-body">
            <div class="mb-2">
                <label asp-for="IdUsuario" class="form-label"></label>
                <input type="text" asp-for="IdUsuario" class="form-control" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="IdRole" class="form-label"></label>
                <input type="text" asp-for="IdRole" class="form-control" />
                <span asp-validation-for="IdRole" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark">Enviar</button>
            <a class="btn btn-secundary" asp-action="Index">Cancelar</a>
        </div>

    </div>
        
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}