
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<!-- Contenedor principal  -->
<div class="d-flex justify-content-center align-items-center vh-100">
	<div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 15px;">
		<div class="card-body">
			<h1 class="text-center mb-4" style="color: #3498db;">Iniciar Sesión</h1>

			<form asp-action="Login">
				<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

				<div class="mb-3">
					<label asp-for="IdUsuario" class="form-label">Usuario</label>
					<input asp-for="IdUsuario" class="form-control" placeholder="Ingrese su usuario" />
					<span asp-validation-for="IdUsuario" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Password" class="form-label">Contraseña</label>
					<input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="form-check mb-4" style="color: #3498db;">
					<input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
					<label class="form-check-label" asp-for="Recuerdame">Recordarme</label>
				</div>

				<button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>

				<a href="/forgot-password" class="btn btn-link d-block text-center mt-3">Olvidé la contraseña</a>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

<!-- Estilos CSS -->
<style>
	
	body {
		background-color: #2c3e50; 
		color: #ecf0f1; 
		font-family: 'Arial', sans-serif;
	}

	.card {
		background-color: #ffffff; 
		border-radius: 15px; 
	}

	.form-label {
		color: #34495e; /* Color de las etiquetas */
	}

	.btn-primary {
		background-color: #2980b9; 
		border-color: #2980b9;
	}

		.btn-primary:hover {
			background-color: #3498db;
			border-color: #3498db;
		}

	.btn-link {
		color: #2980b9; 
	}

		.btn-link:hover {
			color: #3498db; 
		}
</style>
